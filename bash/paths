#!/usr/bin/env bash

###########################################################################
#
# Amazon EC2 Setup
#
export EC2_HOME=/usr/local/share/ec2-api-tools
export EC2_KEY_SLUG=WN6ZNRXZDMCYIC2L5PVD57I4I7WR2TCM
export EC2_PRIVATE_KEY=~/.aws/pk-${EC2_KEY_SLUG}.pem 
export EC2_CERT=~/.aws/cert-${EC2_KEY_SLUG}.pem  
export PATH=$PATH:$EC2_HOME/bin

###########################################################################
#
# PATH
#
MAC_PATH=/sw/bin:/bin:/sbin:/usr/bin:/usr/sbin:/usr/X11R6/bin:/Applications/MAMP/Library/bin
MAC_MPTH=/sw/share/man:/Applications/MAMP/Library/man
PATH_HOME=$HOME/bin:$HOME/slice/bin
PATH_LOCL=/public/bin:/usr/local/bin
MPTH_LOCL=/public/man:/usr/local/man

export PATH=$PATH_HOME:$PATH_LOCL:$PATH:$MAC_PATH:$EC2_HOME/bin
export         MANPATH=$MPTH_LOCL:$MANPATH

export PKG_CONFIG_PATH="/usr/lib/pkgconfig:/usr/share/pkgconfig:/usr/local/lib/pkgconfig:/usr/local/share/pkgconfig:/public/lib/pkgconfig:/public/share/pkgconfig:/usr/X11R6/lib/pkgconfig"
export PERL5LIB=/public/share/perl/lib:/public/share/perl:/usr/local/lib/perl5/site_perl:/usr/share/perl/:/usr/lib/perl:/usr/lib/perl5
export WUKONG_PATH=${HOME}/ics/wukong/lib:${HOME}/ics/wuclan/lib:${HOME}/ics/monkeyshines/lib

if uname -a | egrep 'Darwin.*9\.[6789]' > /dev/null 2>&1 ; then
    export JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Versions/1.6.0/Home
fi
